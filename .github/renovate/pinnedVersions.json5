{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Pin qbittorrent on tracker allowed versions",
      "matchDatasources": ["docker"],
      "allowedVersions": "<=4.5.5",
      "matchPackagePatterns": ["qbittorrent"]
    },
    {
     "description": "Pin csi-provisioner",
      "matchDatasources": ["docker"],
      "allowedVersions": "<=3.6.1",
      "matchPackagePatterns": ["csi-provisioner"]
    },
    {
      "description": "Pin Home-Assistant",
      "matchDatasources": ["docker"],
      "allowedVersions": "<=2024.11.3",
      "matchPackagePatterns": ["home-assistant"]
    },
    {
      "description": "Pin MariaDB to the supported by operator",
      "matchDatasources": ["docker"],
      "allowedVersions": "<=11.4.3",
      "matchPackagePatterns": ["mariadb"]
    }
  ]
}
