{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      description: "Auto merge container digests",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["digest", "minor", "patch"],
      matchPackagePattern: ["ghcr.io/onedr0p"],
    },
    // enable auto-merge
    {
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor", "patch", "digest"],
      matchPackageNames: [
        "k8s.gcr.io/descheduler/descheduler",
        "ghcr.io/techno-tim/littlelink-server",
        "ghcr.io/sct/overseerr",
        "ghost"
      ],
    },
    {
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["patch"],
      matchPackageNames: [
        "wolveix/satisfactory-server"
      ],
    },
    {
      matchDatasources: ["docker"],
      automerge: false,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "ghcr.io/koenkk/zigbee2mqtt",
        "registry.samipsolutions.fi/docker/inspircd/inspircd-docker",
        "inspircd/inspircd-docker"
      ]
    },
    {
      matchDatasources: ["galaxy-collection"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor", "patch"]
    },
    {
      description: "Auto merge GitHub Actions",
      matchManagers: ["github-actions"],
      matchDatasources: ["github-tags"],
      automerge: true,
      ignoreTests: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"]
    },
    {
      matchDatasources: ["helm"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "kube-prometheus-stack",
        "authentik",
        "grafana",
        "renovate",
        "node-feature-discovery"
      ]
    }
  ]
}
