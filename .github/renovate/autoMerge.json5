{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      description: "Auto merge container digests",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["digest", "minor", "patch"],
      matchPackagePattern: ["ghcr.io/k8s-at-home", "ghcr.io/onedr0p"],
    },
    // enable auto-merge
    {
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch", "digest"],
      matchPackageNames: [
        "k8s.gcr.io/descheduler/descheduler",
        "ghcr.io/techno-tim/littlelink-server",
        "ghcr.io/sct/overseerr",
        "ghost"
      ],
    },
    {
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["patch"],
      matchPackageNames: [
        "wolveix/satisfactory-server"
      ],
    },
    {
      matchDatasources: ["galaxy-collection"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"]
    },
    {
      matchDatasources: ["github-actions"],
      automerge: true,
      automergeType: "branch"
    },
    {
      matchDatasources: ["helm"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "kube-prometheus-stack",
        "traefik",
        "authentik",
        "ingress-nginx",
        "grafana",
        "ghost"
      ]
    }
  ]
}
